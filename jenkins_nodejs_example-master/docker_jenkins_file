pipeline {
    agent any
    stages {
        stage('Preparations') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/ayakamal/jenkins_nodejs_example.git'
            }

        }
        stage('CI') {
            steps {
                // Get some code from a GitHub repository
                withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'password', usernameVariable: 'username')]) {
                sh """ docker build . -f dockerfile -t ayakam/sprints_docker_example:latest
                docker login -u ${username} -p ${password}
                docker push ayakam/sprints_docker_example:latest
                """
                }
            }

        }
        stage('CD') {
            steps {
                // Get some code from a GitHub repository
                withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'password', usernameVariable: 'username')]) {
                sh """
                docker login -u ${username} -p ${password}
                docker run -p 3000:3000 -d ayakam/sprints_docker_example:latest
                """
                }
            }

        }
    }
}

